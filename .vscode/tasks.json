{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "GTEST_COLOR": 1
        }
    },
    "tasks": [
        // Clean
        {
            "label": "cmake clean",
            "type": "shell",
            "command": "[",
            "args": [
                "-d",
                "build-devcontainer",
                "]",
                "&&",
                "rm",
                "-r",
                "build-devcontainer",
                "||",
                "echo",
            ],
        },
        // Configure
        {
            "label": "cmake configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                ".",
                "-B",
                "build-devcontainer",
                "-DCMAKE_BUILD_TYPE=Debug",
            ],
            "dependsOn": "cmake clean",
        },
        // Build
        {
            "label": "cmake build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build-devcontainer",
                "-j10",
            ],
            "dependsOn": "cmake configure",
        },
        // Test
        {
            "label": "cmake test",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--rerun-failed",
                "--output-on-failure",
            ],
            "options": {
                "cwd": "${workspaceFolder}/build-devcontainer",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "cmake build",
        }
        // Build and Test / Build
        {
            "label": "cmake build for test",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build-devcontainer",
                "-j10",
            ],
        },
        // Build and Test / Test
        {
            "label": "test",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--rerun-failed",
                "--output-on-failure",
            ],
            "options": {
                "cwd": "${workspaceFolder}/build-devcontainer",
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "cmake build for test",
        },
    ]
}