{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake --build build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake -S . -B build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--rerun-failed",
                "--output-on-failure",
            ],
            "options": {
                "cwd": "${workspaceFolder}/build",
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "build",
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm -r build"
        }
    ]
}